<header>
<!-- header to update depending on whether user is logged in -->
  <% if (!user) { %>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    </div>
    <a class="navbar-brand" href="/login">Login Here!</a>
    <br>
    <a class="navbar-brand" href="/register">Register Here!</a>
  </nav>
  <% } else { %>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <h5 style="margin: 2px 4px 0 0; padding-right: 5px;">Logged In As: <%= user.email %></h5>
    <form class="" action="/logout" method="POST">
      <button type="submit" class="btn btn-info">logout</button>
    </form>
    <a class="navbar-brand" href="/logout"></a>
  </nav>
  <% } %>
</header>
